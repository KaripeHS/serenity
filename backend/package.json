{
  "name": "serenity-erp-backend",
  "version": "1.0.0",
  "description": "HIPAA-compliant, AI-driven ERP system for Serenity Care Partners home health agency",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:api": "tsx watch src/server-simple.ts",
    "dev:api:full": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:simple": "tsx src/server-simple.ts",
    "migrate": "tsx src/database/run-migrations.ts",
    "migrate:latest": "tsx src/database/run-migrations.ts",
    "seed": "tsx src/database/seeds/seed-initial-data.ts",
    "seed:generate": "tsx src/database/seeds/001_sample_data_generator.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:playwright": "playwright test",
    "test:all": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "dev:agents": "tsx watch src/ai/agent-server.ts",
    "agents:health": "curl http://localhost:3001/agents/health",
    "db:create": "tsx src/database/create-database.ts",
    "db:auth-tables": "tsx src/database/create-auth-tables.ts",
    "db:reset": "tsx src/database/reset.ts && npm run migrate && npm run seed",
    "db:setup": "npm run db:create && npm run migrate && npm run db:auth-tables && npm run seed"
  },
  "keywords": [
    "healthcare",
    "erp",
    "home-health",
    "hipaa",
    "ai",
    "ohio-medicaid",
    "evv",
    "scheduling",
    "billing"
  ],
  "author": "Serenity Care Partners",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@google-cloud/speech": "^7.2.1",
    "@google-cloud/storage": "^7.18.0",
    "@sendgrid/mail": "^8.1.6",
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.4",
    "@types/pdfkit": "^0.17.4",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.8",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "openai": "^6.10.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.10",
    "sharp": "^0.34.5",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "twilio": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@playwright/test": "^1.57.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cron": "^2.4.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.27",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
